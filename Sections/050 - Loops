<h2>The While loop</h2>

function guess() {
    var numGuesses = 1;
    var guess = Math.floor(100 * Math.random());
    
    while (guess != 55) {
      numGuesses = numGuesses + 1;
      guess = Math.floor(100 * Math.random());
    }
    
    // 

    Logger.log(numGuesses);
  }