
<h2>The For loop</h2>

for (let i = 1; i <= 12; i++)


function monthList() {
  const message = 'Month ';
  for (let i = 1; i <= 12; i++) {
    console.log(message + i);
  }
}


function monthList() {
    const message = 'Month ';
    for (let i = 1; i <= 12; i++) {
        console.log(message + i);
    
        // Exit the loop after "Month 6"
        if (i === 6) {
        break;
        }
    }
}


function loops() {

    const array = ['!', 'fun', 'are', 'loops'];
  
    for (let i = 3; i >= 0; i--) {
      console.log(array[i]);
    }
  }

